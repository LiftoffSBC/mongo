<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Mongo Scraper</h1>
    <h2>
      <i>TechCrunch Edition</i>
    </h2>
  </div>
</div>

<div class="container-fluid article-container">
  {{#if articleData}} {{#each articleData}}
  <div class="card articleCard">
    <div class="card-header">
      <h3 class="title" data-id={{this._id}} data-saved={{this.saved}}>
        {{#if this.pic}}
        <img class="article-pic" src="{{this.pic}}" alt="No Image"> {{/if}}
        <a href={{this.link}} class="article-link">
          {{this.title}}
        </a>

      </h3>
    </div>
    <div class="card-body">
      <p class="summary">{{this.summary}}</p>
      <a class="btn btn-success save">
        Save Article
      </a>
    </div>
</div>
{{/each}} {{else}}
<div class="container-fluid article-container">
        <div class="alert alert-warning text-center">
            <h4>On no!. Looks like we don't have any saved articles.</h4>
        </div>
        <div class="card">
            <div class="card-header text-center">
                <h3>Would You Like to Browse Available Articles?</h3>
            </div>
            <div class="card-body text-center">
                <h4>
                    <a href="/">Browse Articles</a>
                </h4>
            </div>
        </div>
    </div>
{{/if}}

</div>

